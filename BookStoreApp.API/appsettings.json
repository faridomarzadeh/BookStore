{
  "ConnectionStrings": {
    "BookStoreAppDbConnection": "Server=localhost;Database=BookStoreDb;User Id=sa;Password=12345678Aa;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "JwtSettings": {
    "Issuer": "BookStoreAPI",
    "Audience": "BookStoreAPIClient",
    "Duration": 1
  },
  "AllowedHosts": "*"
}